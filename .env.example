# Kenya Startup Navigator API Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="Kenya Startup Navigator"
ENVIRONMENT="development"
DEBUG="true"
SECRET_KEY="your-secret-key-change-in-production"

# Groq AI Configuration
GROQ_API_KEY="your-groq-api-key-here"
GROQ_MODEL="llama3-70b-8192"
GROQ_MAX_TOKENS="2048"
GROQ_TEMPERATURE="0.7"

# Rate Limiting
RATE_LIMIT_PER_MINUTE="60"

# Logging
LOG_LEVEL="INFO"

# AI Response Configuration  
AI_RESPONSE_CACHE_TTL="3600"
MAX_QUERY_LENGTH="2000"
MIN_QUERY_LENGTH="5"

# Data Refresh
ECOSYSTEM_DATA_REFRESH_INTERVAL="86400"

# Production settings (Railway deployment)
# ENVIRONMENT="production"
# DEBUG="false"
# Add your production domains to ALLOWED_ORIGINS and ALLOWED_HOSTS